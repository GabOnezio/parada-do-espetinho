{
  "name": "parada-do-espetinho-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch server/index.ts",
    "build": "prisma generate && tsc -p tsconfig.json",
    "start": "node dist/server/index.js",
    "prisma:migrate": "bash -c 'set -a; [ -f ../.env ] && source ../.env; [ -f .env ] && source .env; set +a; prisma migrate deploy'",
    "prisma:generate": "bash -c 'set -a; [ -f ../.env ] && source ../.env; [ -f .env ] && source .env; set +a; prisma generate'",
    "seed": "bash -c 'set -a; [ -f ../.env ] && source ../.env; [ -f .env ] && source .env; set +a; tsx scripts/seed.ts'",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jose": "^5.1.2",
    "mercadopago": "^2.10.1",
    "morgan": "^1.10.0",
    "otplib": "^12.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.11.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.15.0",
    "typescript": "^5.3.3"
  }
}
